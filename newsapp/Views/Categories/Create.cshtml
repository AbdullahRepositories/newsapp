@{
    
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@if (TempData.ContainsKey("info"))
{
    <div class="alert alert-info">@TempData["info"]</div>
}
<h4 style="margin-left:30px">Categories</h4>
<hr />
<div class="row" style="margin-left:30px" >
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom:15px; margin-top: 10px" >
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark" style="margin-left:30px">Back to List</a>
</div>

